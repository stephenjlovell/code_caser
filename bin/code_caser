#!/usr/bin/env ruby
require "rubygems"
require "thor"
require_relative "../lib/code_caser"

class CaserCLI < Thor

  desc "to_camel", "converts files to camelCase from snake_case."
  method_option :path, type: :string, required: true
  def to_camel
    CodeCaser::to_camel(target: path)
  end

  desc "to_snake", "converts file to snake_case from camelCase."
  method_option :path, type: :string, required: true
  def to_snake
    CodeCaser::to_snake(target: path)
  end

end

CaserCLI.start
